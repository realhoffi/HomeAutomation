{
  "compileOnSave": false,
  "compilerOptions": {
    //"outDir": "./definitions",
    "declaration": false,
    //"declarationDir": "/build",
    "sourceMap": false,
    "target": "es5",
    "watch": false,
    "module": "commonjs",
    "jsx": "react",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noLib": false,
    "lib": [
      "dom",
      "es6"
    ],
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "charset": "utf8",
    "typeRoots": [
      "node_modules/@types/"
    ],
    "types": [
      "react",
      "react-dom",
      "node",
      "bluebird"
    ]
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**",
    "!**/*.d.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "typings",
    "build",
    "definitions"
  ]
}